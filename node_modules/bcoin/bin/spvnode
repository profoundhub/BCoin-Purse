#!/usr/bin/env node

'use strict';

process.title = 'bcoin';

var assert = require('assert');
var bcoin = require('../');
var util = bcoin.util;
var co = bcoin.co;
var options, node;

options = bcoin.config({
  config: true,
  arg: true,
  env: true,
  logLevel: 'debug',
  logFile: true,
  db: 'leveldb'
});

bcoin.set(options);

node = bcoin.spvnode(options);

node.on('error', function(err) {
  ;
});

process.on('uncaughtException', function(err) {
  node.logger.debug(err.stack);
  node.logger.error(err);
  process.exit(1);
});

co.spawn(function *() {
  yield node.open();
  yield node.connect();

  if (process.argv.indexOf('--test') !== -1) {
    node.pool.watchAddress('1VayNert3x1KzbpzMGt2qdqrAThiRovi8');
    node.pool.watchOutpoint(new bcoin.outpoint());
    node.on('block', function(block) {
      assert(block.txs.length >= 1);
      if (block.txs.length > 1)
        util.log(block.txs[1]);
    });
  }

  node.startSync();
}).catch(function(err) {
  throw err;
});
